{
    "realm": "ci",
    "enabled": true,
    "sslRequired": "external",
    "registrationAllowed": true,
    "requiredCredentials": [ "password" ],
    "users" : [
        {
            "username" : "demo",
            "enabled": true,
            "email" : "me@localhost",
            "firstName": "Sample",
            "lastName": "User",
            "credentials" : [
                { "type" : "password",
                  "value" : "$USER_PASSWORD" }
            ],
            "clientRoles": {
                "account": ["view-profile", "manage-account"]
            }
        }
    ],
    "scopeMappings": [
        {
            "clientScope": "offline_access",
            "roles": ["offline_access"]
        }
    ],
    "clients": [
        {
            "clientId": "jenkins",
            "enabled": true,
	    "publicClient": false,
	    "secret": "$KEYCLOAK_JENKINS_SECRET",
	    "clientAuthenticatorType": "client-secret",
	    "rootUrl": "http://localhost:4040",
	    "adminUrl": "http://localhost:4040",
            "redirectUris": [
                "http://localhost:4040/*"
            ],
            "webOrigins": [
                "http://localhost:4040/*"
            ]
        },
        {
            "clientId": "gitea",
            "enabled": true,
	    "publicClient": false,
	    "secret": "$KEYCLOAK_GITEA_SECRET",
	    "clientAuthenticatorType": "client-secret",
	    "rootUrl": "http://localhost:3000",
	    "adminUrl": "http://localhost:3000",
            "redirectUris": [
                "http://localhost:3000/*"
            ],
            "webOrigins": [
                "http://localhost:3000/*"
            ]
        }
    ],
    "clientScopeMappings": {
        "account": [
            {
                "client": "jenkins",
                "roles": ["view-profile"]
            }
        ]
    }
}
